{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A parallel coordinates plot",
    "data": { "url": "https://raw.githubusercontent.com/Rafaquat/FIT_3179_A2/main/Data_Vis_2/data/parallelCoordData/parallelCoordData.json" },
    "width": 900,
    "height": 500,
    "layer": [{
            "mark": "rule",
            "encoding": {
                "x": { "value": 0 },
                "opacity": { "value": 0 },
                "y": {
                    "field": "Age",
                    "type": "quantitative",
                    "axis": { "grid": false, "title": null }
                },
                "detail": { "field": "Name" }
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": { "value": 0 },
                "opacity": { "value": 0 },
                "y": {
                    "field": "Children",
                    "type": "quantitative",
                    "axis": {
                        "grid": false,
                        "title": null,
                        "orient": "right",
                        "offset": 0
                    }
                },
                "detail": { "field": "Name" }
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": { "value": 0 },
                "opacity": { "value": 0 },
                "y": {
                    "field": "Assets",
                    "type": "quantitative",
                    "axis": { "grid": false, "title": null, "orient": "right", "offset": 0 }
                },
                "detail": { "field": "Name" }
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": { "value": 0 },
                "opacity": { "value": 0 },
                "y": {
                    "field": "Expenses",
                    "type": "quantitative",
                    "axis": { "grid": false, "title": null, "orient": "right", "offset": 0 }
                },
                "detail": { "field": "Name" }
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": { "value": 0 },
                "opacity": { "value": 0 },
                "y": {
                    "field": "Depressed",
                    "type": "nominal",
                    "axis": { "grid": false, "title": null, "orient": "right", "offset": 0 }
                },
                "detail": { "field": "Name" }
            }
        },
        {
            "transform": [{
                    "calculate": "['Age', 'Children', 'Assets', 'Expenses', 'Depressed']",
                    "as": "x"
                },
                {
                    "calculate": "[height - scale('layer_0_y', datum.Age), height - scale('layer_1_y', datum.Children), height - scale('layer_2_y', datum.Assets), height - scale('layer_2_y', datum.Expenses), height - scale('layer_2_y', datum.Depressed)]",
                    "as": "y"
                },
                { "flatten": ["x", "y"] }
            ],
            "selection": {
                "hover": {
                    "type": "single",
                    "on": "mouseover",
                    "clear": "mouseout",
                    "empty": "none"
                }
            },
            "mark": { "type": "line", "point": true, "tooltip": { "content": "data" } },
            "encoding": {
                "opacity": {
                    "condition": { "selection": "hover", "value": 1 },
                    "value": 0.5
                },
                "x": {
                    "field": "x",
                    "sort": null,
                    "type": "ordinal",
                    "scale": { "type": "point", "padding": 0 },
                    "axis": { "title": null, "labelAngle": 0, "domain": false }
                },
                "y": { "field": "y", "type": "quantitative", "axis": null },
                "detail": { "field": "Name" }
            }
        }
    ],
    "resolve": { "scale": { "y": "independent" } },
    "config": { "padding": 0, "view": { "stroke": null } }
}